{
	"compilerOptions": {
		"incremental": true,
		"target": "ESNext",
		"allowJs": false,

		"module": "commonjs",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"composite": true,

		"removeComments": true,

		"strict": true,
		"alwaysStrict": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
